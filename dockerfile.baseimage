FROM python:3.11-slim

WORKDIR /app
ENV PYTHONPATH=/app

RUN apt-get update && apt-get install -y \
    build-essential \
    git \
    tesseract-ocr \
    poppler-utils \
    pkg-config \
    libcairo2-dev \
    libgirepository1.0-dev \
    && rm -rf /var/lib/apt/lists/*

COPY pyproject.toml ./
COPY README.md ./
COPY LICENSE ./

RUN pip install --no-cache-dir -U pip setuptools wheel

# Install all dependencies with cli extras
RUN pip install --no-cache-dir -e ".[cli,all]"

